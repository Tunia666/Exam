<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="sample.export.Controller">

    <Label text="Enter user information" />

    <HBox spacing="10">
        <Label text="firstName" />
        <TextField fx:id="firstName" />
    </HBox>

    <HBox spacing="10">
        <Label text="lastName" />
        <TextField fx:id="lastName" />
    </HBox>

    <HBox spacing="10">
        <Label text="Phone Number" />
        <TextField fx:id="phoneNumber" />
    </HBox>

    <HBox spacing="10">
        <Label text="Email" />
        <TextField fx:id="email" />
    </HBox>

    <HBox>
        <Button text="Save" onAction="#saveUser" />
        <Button text="Save to File" onAction="#saveToFile" />
    </HBox>

</VBox>

